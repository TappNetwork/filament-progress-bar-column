{
    "name": "tapp/filament-progress-bar-column",
    "description": "Add beautiful, color-coded progress bars to your Filament table columns. Perfect for inventory, tasks, storage, and any progress metrics without writing custom views.",
    "keywords": [
        "filament",
        "laravel",
        "filament-plugin",
        "filament-column",
        "progress",
        "progress-bar",
        "progressbar",
        "threshold",
        "status",
        "indicator"
    ],
    "homepage": "https://github.com/tapp/filament-progress-bar-column",
    "support": {
        "issues": "https://github.com/tapp/filament-progress-bar-column/issues",
        "source": "https://github.com/tapp/filament-progress-bar-column"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tapp Network",
            "email": "andreia.bohner@tappnetwork.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "filament/tables": "^3.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "nunomaduro/collision": "^7.0|^8.0",
        "nunomaduro/larastan": "^2.9",
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Tapp\\FilamentProgressBarColumn\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tapp\\FilamentProgressBarColumn\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tapp\\FilamentProgressBarColumn\\FilamentProgressBarColumnServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
